/dts-v1/;
/plugin/;

/*
 * WM8960 Audio HAT Overlay for Orange Pi Zero 2W (H618)
 * 
 * This overlay:
 * 1. Configures PI1-PI4 pins for I2S0 function
 * 2. Adds AHUB0 platform device for external I2S
 * 3. Adds AHUB0 machine driver
 * 4. Configures WM8960 codec on I2C bus 2
 * 5. Creates soundcard binding
 */

/ {
    compatible = "xunlong,orangepi-zero2w", "allwinner,sun50i-h618";

    fragment@0 {
        target = <&pio>;
        __overlay__ {
            i2s0_pins: i2s0-pins {
                pins = "PI1", "PI2", "PI3", "PI4";  /* BCLK, LRCK, DOUT, DIN - No MCLK */
                function = "i2s0";
                drive-strength = <20>;
                bias-disable;
            };
        };
    };

    fragment@1 {
        target-path = "/soc/sound";
        __overlay__ {
            ahub0_plat: ahub0_plat {
                #sound-dai-cells = <0>;
                compatible = "allwinner,sunxi-snd-plat-ahub";
                apb_num = <0>;          /* I2S0 */
                dmas = <&dma 3>, <&dma 3>;
                dma-names = "tx", "rx";
                playback_cma = <128>;
                capture_cma = <128>;
                tx_fifo_size = <128>;
                rx_fifo_size = <128>;
                
                tdm_num = <0>;
                tx_pin = <0>;
                rx_pin = <0>;
                
                pinctrl-names = "default";
                pinctrl-0 = <&i2s0_pins>;
                status = "okay";
            };

            ahub0_mach: ahub0_mach {
                compatible = "allwinner,sunxi-snd-mach";
                soundcard-mach,name = "ahub0wm8960";
                soundcard-mach,format = "i2s";
                soundcard-mach,frame-master = <&ahub0_cpu>;
                soundcard-mach,bitclock-master = <&ahub0_cpu>;
                soundcard-mach,slot-num = <2>;
                soundcard-mach,slot-width = <32>;
                status = "okay";

                ahub0_cpu: soundcard-mach,cpu {
                    sound-dai = <&ahub0_plat>;
                    soundcard-mach,pll-fs = <4>;
                    /* No MCLK - WM8960 uses onboard crystal */
                };

                ahub0_codec: soundcard-mach,codec {
                    sound-dai = <&wm8960>;
                    soundcard-mach,mclk-fs = <256>;
                };
            };
        };
    };

    fragment@2 {
        target-path = "/";
        __overlay__ {
            wm8960_mclk: wm8960-mclk {
                compatible = "fixed-clock";
                #clock-cells = <0>;
                clock-frequency = <24000000>;
                clock-output-names = "wm8960-mclk";
            };
        };
    };

    fragment@3 {
        target = <&i2c2>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;

            wm8960: wm8960@1a {
                compatible = "wlf,wm8960";
                reg = <0x1a>;
                #sound-dai-cells = <0>;
                clocks = <&wm8960_mclk>;
                clock-names = "mclk";
                wlf,shared-lrclk;
                status = "okay";
            };
        };
    };
};
