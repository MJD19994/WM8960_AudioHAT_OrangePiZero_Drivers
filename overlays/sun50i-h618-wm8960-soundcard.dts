/*
 * Device Tree Overlay for WM8960 Audio Codec (ReSpeaker 2-Mic HAT / Keyestudio)
 * on Orange Pi Zero 2W (Allwinner H618)
 *
 * Copyright (C) 2025
 * License: MIT
 *
 * This overlay enables the WM8960 codec connected via:
 *   - I2C1 for control (address 0x1a)
 *   - I2S for audio data
 *
 * GPIO Pin Mapping (40-pin header - Raspberry Pi compatible):
 *   Pin 3  (PI8)  - I2C1 SDA
 *   Pin 5  (PI7)  - I2C1 SCL
 *   Pin 12 (PI1)  - I2S BCLK (BCK)
 *   Pin 35 (PI2)  - I2S LRCK (Frame Sync)
 *   Pin 38 (PI3)  - I2S DIN (Data from codec)
 *   Pin 40 (PI3)  - I2S DOUT (Data to codec)
 *
 * The 40-pin GPIO header is hardware compatible with Raspberry Pi HATs.
 * No rewiring required - just correct device tree configuration.
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "allwinner,sun50i-h618";

	/* Fragment 0: Enable I2C1 and add WM8960 codec */
	fragment@0 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			wm8960: wm8960@1a {
				compatible = "wlf,wm8960";
				reg = <0x1a>;
				#sound-dai-cells = <0>;

				/* Optional: share LRCLK between ADC and DAC */
				wlf,shared-lrclk;

				/* Optional: GPIO configuration for jack detection */
				/* wlf,gpio-cfg = <1 3>; */

				/* Headphone driver configuration */
				/* wlf,hp-cfg = <3 2 3>; */
			};
		};
	};

	/* Fragment 1: Enable I2S2 interface */
	fragment@1 {
		target = <&i2s2>;
		__overlay__ {
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&i2s2_pins>;
		};
	};

	/* Fragment 2: Create sound card node */
	fragment@2 {
		target-path = "/";
		__overlay__ {
			wm8960_mclk: wm8960-mclk {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
				clock-output-names = "wm8960-mclk";
			};

			sound_wm8960: sound-wm8960 {
				compatible = "simple-audio-card";
				simple-audio-card,name = "wm8960-soundcard";
				simple-audio-card,format = "i2s";
				simple-audio-card,mclk-fs = <256>;

				/* CPU is bitclock and frame master */
				simple-audio-card,bitclock-master = <&dailink_master>;
				simple-audio-card,frame-master = <&dailink_master>;

				/* Audio routing */
				simple-audio-card,widgets =
					"Microphone", "Mic Jack",
					"Line", "Line In",
					"Line", "Line Out",
					"Speaker", "Speaker",
					"Headphone", "Headphone Jack";

				simple-audio-card,routing =
					"Headphone Jack", "HP_L",
					"Headphone Jack", "HP_R",
					"Speaker", "SPK_LP",
					"Speaker", "SPK_LN",
					"Speaker", "SPK_RP",
					"Speaker", "SPK_RN",
					"LINPUT1", "Mic Jack",
					"LINPUT3", "Mic Jack",
					"RINPUT1", "Mic Jack",
					"RINPUT2", "Line In",
					"LINPUT2", "Line In";

				status = "okay";

				simple-audio-card,cpu {
					sound-dai = <&i2s2>;
				};

				dailink_master: simple-audio-card,codec {
					sound-dai = <&wm8960>;
					clocks = <&wm8960_mclk>;
					clock-names = "mclk";
				};
			};
		};
	};
};
