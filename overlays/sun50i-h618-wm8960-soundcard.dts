/*
 * Device Tree Overlay for WM8960 Audio Codec (ReSpeaker 2-Mic HAT / Keyestudio)
 * on Orange Pi Zero 2W (Allwinner H618)
 *
 * Copyright (C) 2025
 * License: MIT
 *
 * This overlay enables the WM8960 codec connected via:
 *   - I2C for control (address 0x1a)
 *   - I2S for audio data
 *
 * GPIO Pin Mapping (40-pin header - Raspberry Pi compatible):
 *   Pin 3  - I2C SDA
 *   Pin 5  - I2C SCL
 *   Pin 12 - I2S BCLK
 *   Pin 35 - I2S LRCK (Frame Sync)
 *   Pin 38 - I2S DIN (Data from codec)
 *   Pin 40 - I2S DOUT (Data to codec)
 *
 * Note: The I2C bus number may vary depending on kernel/OS configuration.
 * Check with 'ls /dev/i2c*' and 'i2cdetect -y X' to find which bus
 * has the WM8960 at address 0x1a.
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "xunlong,orangepi-zero2w", "allwinner,sun50i-h618";

	/* Fragment 0: Enable I2C0 for WM8960 control */
	fragment@0 {
		target = <&i2c0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			wm8960: wm8960@1a {
				compatible = "wlf,wm8960";
				reg = <0x1a>;
				#sound-dai-cells = <0>;
				wlf,shared-lrclk;
			};
		};
	};

	/* Fragment 1: Create sound card using simple-audio-card */
	fragment@1 {
		target-path = "/";
		__overlay__ {
			wm8960_mclk: wm8960-mclk {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
				clock-output-names = "wm8960-mclk";
			};

			sound_wm8960: sound-wm8960 {
				compatible = "simple-audio-card";
				simple-audio-card,name = "wm8960-soundcard";
				simple-audio-card,format = "i2s";
				simple-audio-card,mclk-fs = <256>;
				simple-audio-card,bitclock-master = <&dailink_master>;
				simple-audio-card,frame-master = <&dailink_master>;

				simple-audio-card,widgets =
					"Microphone", "Mic Jack",
					"Line", "Line In",
					"Line", "Line Out",
					"Speaker", "Speaker",
					"Headphone", "Headphone Jack";

				simple-audio-card,routing =
					"Headphone Jack", "HP_L",
					"Headphone Jack", "HP_R",
					"Speaker", "SPK_LP",
					"Speaker", "SPK_LN",
					"Speaker", "SPK_RP",
					"Speaker", "SPK_RN",
					"LINPUT1", "Mic Jack",
					"LINPUT3", "Mic Jack",
					"RINPUT1", "Mic Jack",
					"RINPUT2", "Line In",
					"LINPUT2", "Line In";

				status = "okay";

				simple-audio-card,cpu {
					sound-dai = <&codec>;
				};

				dailink_master: simple-audio-card,codec {
					sound-dai = <&wm8960>;
					clocks = <&wm8960_mclk>;
					clock-names = "mclk";
				};
			};
		};
	};
};
