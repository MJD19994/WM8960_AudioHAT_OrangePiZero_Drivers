/*
 * Device Tree Overlay for WM8960 Audio Codec (ReSpeaker 2-Mic HAT / Keyestudio)
 * on Orange Pi Zero 2W (Allwinner H618) - Using I2S3 Interface
 *
 * Copyright (C) 2025
 * License: MIT
 *
 * This overlay is an alternative using I2S3 interface which has better
 * support on some kernel versions.
 *
 * GPIO Pin Mapping (40-pin header):
 *   Pin 3  (PI8)  - I2C1 SDA
 *   Pin 5  (PI7)  - I2C1 SCL
 *   Pin 19 (PH7)  - I2S3 LRCK
 *   Pin 21 (PH8)  - I2S3 DATA
 *   Pin 23 (PH6)  - I2S3 BCLK
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "allwinner,sun50i-h618";

	/* Fragment 0: Enable I2C1 and add WM8960 codec */
	fragment@0 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			wm8960_i2s3: wm8960@1a {
				compatible = "wlf,wm8960";
				reg = <0x1a>;
				#sound-dai-cells = <0>;

				/* Share LRCLK between ADC and DAC */
				wlf,shared-lrclk;
			};
		};
	};

	/* Fragment 1: Enable I2S3 interface */
	fragment@1 {
		target = <&i2s3>;
		__overlay__ {
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&i2s3_pins>;
		};
	};

	/* Fragment 2: Create sound card node */
	fragment@2 {
		target-path = "/";
		__overlay__ {
			wm8960_mclk_i2s3: wm8960-mclk-i2s3 {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
				clock-output-names = "wm8960-mclk";
			};

			sound_wm8960_i2s3: sound-wm8960-i2s3 {
				compatible = "simple-audio-card";
				simple-audio-card,name = "wm8960-soundcard";
				simple-audio-card,format = "i2s";
				simple-audio-card,mclk-fs = <256>;

				simple-audio-card,bitclock-master = <&dailink_master_i2s3>;
				simple-audio-card,frame-master = <&dailink_master_i2s3>;

				simple-audio-card,widgets =
					"Microphone", "Mic Jack",
					"Line", "Line In",
					"Line", "Line Out",
					"Speaker", "Speaker",
					"Headphone", "Headphone Jack";

				simple-audio-card,routing =
					"Headphone Jack", "HP_L",
					"Headphone Jack", "HP_R",
					"Speaker", "SPK_LP",
					"Speaker", "SPK_LN",
					"Speaker", "SPK_RP",
					"Speaker", "SPK_RN",
					"LINPUT1", "Mic Jack",
					"LINPUT3", "Mic Jack",
					"RINPUT1", "Mic Jack",
					"RINPUT2", "Line In",
					"LINPUT2", "Line In";

				status = "okay";

				simple-audio-card,cpu {
					sound-dai = <&i2s3>;
				};

				dailink_master_i2s3: simple-audio-card,codec {
					sound-dai = <&wm8960_i2s3>;
					clocks = <&wm8960_mclk_i2s3>;
					clock-names = "mclk";
				};
			};
		};
	};
};
